#:kivy 1.10.1
# moved this file from out of __py_cache__ how'd it get there???
<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<WelcomeScreen>:
    id: welcome_screen
    AnchorLayout:

        anchor_x: "center"


        BoxLayout: 
        
            orientation: "vertical"

            size_hint: (0.5, 1)

            spacing: 10



            Label:

                size_hint_y: .4

                text: "Future Pong"

                valign: "bottom"

                bold: True

                font_size: 50

                padding: 0, 0

            AnchorLayout:
                anchor_x: "center"

                size_hint_y: .6


                BoxLayout:

                    size_hint: .5, .5
            
                    orientation: "vertical"

                    spacing: 10

                    Button:

                        halign: "center"

                        valign: "middle"

                        text: "Start"

                        on_press: root.manager.current = "game_screen"
                    
                    
                    Button:

                        halign: "center"

                        valign: "middle"

                        text: "Settings"

                        on_press: root.manager.current = "settings_screen"




<SettingsScreen>:

    player_1_name_widget: player_1_name_widget_id
    player_1_paddle_color: player_1_paddle_color_id





    BoxLayout:

        orientation: "vertical"

        spacing: 20


        GridLayout:
            
            size_hint_y: .8

            cols: 2



            Label:

                text: "Winning Score"

                halign: "center"


            TextInput:

                id: # max_score_widget_id
                text: "7"

            Label:

                text: "Player 1 Name:"

                halign: "center"


            TextInput:

                id: player_1_name_widget_id
                text: "Player 1"


            Label:

                text: "Player 1 Paddle Color:"

                halign: "center"

            ColorPicker:
                id: player_1_paddle_color_id
                size_hint: 1.0, 1.0
                on_color: root.player_1_paddle_on_color(self.color)
            
            
            Button:

                size_hint_x: 0.5

                text: "Save changes"

                on_press: root.save()

        
            
        

<GameScreen>:   

    game_engine: pong_game_id
    
    PongGame:
        id: pong_game_id


<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    player1label: player_left
    player2label: player_right

    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height

    Label:
        id: player1label
        canvas:
            Color:
                rgba: self.color

        font_size: 55
        center_x: root.width / 4
        top: root.top - 0.5
        text: root.player_1_name

    Label:
        font_size: 65
        center_x: root.width / 4
        top: root.top - 55
        text: str(root.player1.score)

    Label:
        id: winner_label
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        


    Label:
        font_size: 65
        center_x: root.width * 3 / 4
        top: root.top - 55
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y