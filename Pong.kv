<WelcomeScreen>:
    id: welcome_screen
    play_image_button: play_image_button_id
    settings_image_button: settings_image_button_id
    AnchorLayout:

        anchor_x: "center"


        BoxLayout: 
        
            orientation: "vertical"

            size_hint: (1, 0.5)

            spacing: 5



            Label:

                size_hint_y: .3

                text: "FUTURE PONG"

                valign: "bottom"

                bold: True

                font_size: 50

                padding: 0, 0

            AnchorLayout:
                anchor_x: "center"

                size_hint_y: .7


                BoxLayout:

                    size_hint: 1, 1
            
                    orientation: "vertical"

                    spacing: 1

                    
                    ImageButton:
                        id:play_image_button_id
                        source: "./images/start.png"
                        size: (150,150)
                        on_press: root.manager.current = "game_screen"
                    


                    ImageButton:
                        id:settings_image_button_id
                        source: "./images/settings.png"
                        size: (150,150)
                        on_press: root.manager.current = "settings_screen"
                    
