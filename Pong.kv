<SettingsScreen>:

    max_score_widget: max_score_widget_id
    
    player_1_name_widget: player_1_name_widget_id
    player_1_paddle_color: player_1_paddle_color_id

    player_2_name_widget: player_2_name_widget_id
    player_2_paddle_color: player_2_paddle_color_id

    pong_ball_color: pong_ball_color_id

    title: "Settings"

    size_hint: 1, 1





    BoxLayout:

        orientation: "vertical"

        spacing: 20


        GridLayout:
            
            size_hint_y: .8

            cols: 2



            Label:

                text: "Winning Score"

                halign: "center"


            TextInput:

                id: max_score_widget_id
                text: "7"

            Label:

                text: "Player 1 Name:"
                
                halign: "center"


            TextInput:

                id: player_1_name_widget_id
                text: ""


            
            
            
            
            Label:
                text: "Player 1 Paddle Color:"
                color: [0, 0, 0, 1]
                canvas.before:
            

                    
                    Color:
                        rgba: root.player_1_label_color
                    Rectangle:
                        pos:self.pos
                        size:self.size

                halign: "center"

            PongColorWheel:
                id: player_1_paddle_color_id
                size_hint: 1.0, 1.0
                on_color: root.player_1_paddle_on_color(self.color)
            
            
            Label:

                text: "Player 2 Name:"

                halign: "center" 
            

            TextInput:

                id: player_2_name_widget_id
                
                text: ""

            

            Label:
                text: "Player 2 Paddle Color:"
                color: [0, 0, 0, 1]
                canvas.before:
            

                    
                    Color:
                        rgba: root.player_2_label_color
                    Rectangle:
                        pos:self.pos
                        size:self.size

                halign: "center"

            PongColorWheel:
                id: player_2_paddle_color_id
                size_hint: 1.0, 1.0
                on_color: root.player_2_paddle_on_color(self.color)
            
            
            Label:
                text: "Ball Color:"
                color: [0, 0, 0, 1]
                canvas.before:



                    Color:
                        rgba: root.pong_ball_label_color
                    Rectangle:
                        pos:self.pos
                        size:self.size

                halign: "center"

            PongColorWheel:
                id: pong_ball_color_id
                size_hint: 1.0, 1.0
                on_color: root.pong_ball_on_color(self.color)
            
            
            
            
            Button:

                size_hint_x: 0.5

                text: "Save changes"

                on_press: root.save()

        
            
        



<GameScreen>:   

    game_engine: pong_game_id
    
    PongGame:
        id: pong_game_id




<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    player1label: player_left
    player2label: player_right

    canvas:
        Rectangle:
            pos: self.center_x-5, 0
            size: 10, self.height

    Label:
        id: player1label
        canvas:
            Color:
                rgba: self.color

        font_size: 55
        center_x: root.width / 4
        top: root.top - 0.5
        text: root.player_1_name

    Label:
        font_size: 65
        center_x: root.width / 4
        top: root.top - 55
        text: str(root.player1.score)

    
    Label:
        id: player2label
        canvas:
            Color:
                rgba: self.color

        font_size: 60
        center_x: root.width * 3 / 4
        top: root.top - 0.5
        text: root.player_2_name

    
    
    Label:
        id: winner_label
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        


    Label:
        font_size: 65
        center_x: root.width * 3 / 4
        top: root.top - 55
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y